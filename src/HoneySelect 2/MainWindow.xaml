<Window x:Class="InitSetting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitSetting"
        mc:Ignorable="d"
        Title="{x:Static local:Localizable.WindowTitle}"
        Height="600"
        Width="900"
        ResizeMode="NoResize"
        WindowStyle="None"
        BorderBrush="Black"
        BorderThickness="1">

    <Window.Resources>

        <!-- Removed the unused 'fie' style -->

        <Style x:Key="buttonHover" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="BorderBrush" Value="#FFF0C658" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#33FF0000" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7FF0C658" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GameButtonsLabel" TargetType="Label">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="13" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="198*" />
            <RowDefinition Height="101*" />
        </Grid.RowDefinitions>

        <!-- Main Background -->
        <Grid.Background>
            <ImageBrush x:Name="appBG" ImageSource="Images/LauncherBG.png" />
        </Grid.Background>

        <!-- Top Button Grid -->
        <Grid HorizontalAlignment="Left" Height="102" VerticalAlignment="Top" Width="898">
            <!-- Start Game Border & Image -->
            <Border HorizontalAlignment="Left" Height="34" Margin="125,24,0,0"
                    VerticalAlignment="Top" Width="219.839" Background="Black">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform AngleX="-40" />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Border.RenderTransform>
                <Image x:Name="imageStartGame"
                       Source="Images/ButtonBG/startGame.png"
                       RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Right"
                       Stretch="None">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform AngleX="40" />
                            <RotateTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Border>
            <Label Style="{StaticResource GameButtonsLabel}"
                   x:Name="labelStart"
                   Content="{x:Static local:Localizable.StartGame}"
                   HorizontalAlignment="Left"
                   Margin="125,24,0,0"
                   VerticalAlignment="Top"
                   Width="190"
                   Height="34" />
            <Button Style="{StaticResource buttonHover}"
                    x:Name="buttonStartGame"
                    Content=""
                    HorizontalAlignment="Left"
                    Height="36"
                    Margin="124,23,0,0"
                    VerticalAlignment="Top"
                    Width="223"
                    Click="buttonStart_Click">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform AngleX="-40" />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

            <!-- Start Studio Border & Image -->
            <Border HorizontalAlignment="Left" Height="32.25" Margin="351,24.75,0,0"
                    VerticalAlignment="Top" Width="219.866" Background="Black">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform AngleX="-40" />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Border.RenderTransform>
                <Image x:Name="imageStartStudio"
                       Source="Images/ButtonBG/startStudio.png"
                       RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Right"
                       Margin="0,-0.75,0.689,-1" Width="210.625">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform AngleX="40" />
                            <RotateTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Border>
            <Label Style="{StaticResource GameButtonsLabel}"
                   x:Name="labelStartStudio"
                   Content="{x:Static local:Localizable.StartStudio}"
                   HorizontalAlignment="Left"
                   Margin="352,24,0,0"
                   VerticalAlignment="Top"
                   Width="190"
                   Height="34" />
            <Button Style="{StaticResource buttonHover}"
                    x:Name="buttonStartStudio"
                    Content=""
                    HorizontalAlignment="Left"
                    Height="36"
                    Margin="351,23,0,0"
                    VerticalAlignment="Top"
                    Width="223"
                    Click="buttonStartS_Click">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform AngleX="-40" />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

            <!-- Start VR Border & Image -->
            <Border HorizontalAlignment="Left" Height="34" Margin="579,24,0,0"
                    VerticalAlignment="Top" Width="218.875" Background="Black">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform AngleX="-40" />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Border.RenderTransform>
                <Image x:Name="imageStartVR"
                       Source="Images/ButtonBG/startVR.png"
                       RenderTransformOrigin="0.5,0.5"
                       HorizontalAlignment="Right"
                       Margin="-3,0,0,-1">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform AngleX="40" />
                            <RotateTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </Image.RenderTransform>
