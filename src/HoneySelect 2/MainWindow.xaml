            <Border BorderBrush="#FFF0C658"
                    Background="Black"
                    BorderThickness="2"
                    HorizontalAlignment="Left"
                    Height="37"
                    Margin="0,0,-0.083,0"
                    VerticalAlignment="Top"
                    Width="190"
                    CornerRadius="20">
                <Label x:Name="labelDiscord"
