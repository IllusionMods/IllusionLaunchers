                    VerticalAlignment="Top" Width="170.083" Background="Black">
                <Image x:Name="imageManualVR"
                       Source="Images/ButtonBG/manual.png"
                       RenderTransformOrigin="0.5,0.5"
                       HorizontalAlignment="Right" />
            </Border>
            <Label x:Name="labelManualVR"
                   Foreground="White"
                   VerticalContentAlignment="Center"
                   Content="{x:Static local:Localizable.ManualVR}"
                   HorizontalAlignment="Left"
                   Margin="583,63,0,0"
                   VerticalAlignment="Top"
                   Height="24"
                   Width="98" />
            <Button Style="{StaticResource buttonHover}"
                    x:Name="buttonManualVR"
                    Content=""
                    HorizontalAlignment="Left"
                    Height="24"
                    Margin="579,63,0,0"
                    VerticalAlignment="Top"
                    Width="174"
                    Click="buttonManualV_Click" />

            <Border HorizontalAlignment="Left" Height="20.333" Margin="360.083,64.75,0,0"
                    VerticalAlignment="Top" Width="169.917" Background="Black">
                <Image x:Name="imageManualStudio"
                       Source="Images/ButtonBG/manual.png"
                       RenderTransformOrigin="0.5,0.5"
                       HorizontalAlignment="Right" />
            </Border>
            <Label x:Name="labelManualStudio"
                   Foreground="White"
                   VerticalContentAlignment="Center"
                   Content="{x:Static local:Localizable.ManualStudio}"
                   HorizontalAlignment="Left"
                   Margin="364,63,0,0"
                   VerticalAlignment="Top"
                   Height="24"
                   Width="122" />
            <Button Style="{StaticResource buttonHover}"
                    x:Name="buttonManualStudio"
                    Content=""
                    HorizontalAlignment="Left"
                    Height="24"
                    Margin="358,63,0,0"
                    VerticalAlignment="Top"
                    Width="174"
                    Click="buttonManualS_Click" />

            <Border HorizontalAlignment="Left" Height="20.333" Margin="132.833,64.75,0,0"
                    VerticalAlignment="Top" Width="170.417" Background="Black">
                <Image x:Name="imageManualGame"
                       Source="Images/ButtonBG/manual.png"
                       RenderTransformOrigin="0.5,0.5"
                       HorizontalAlignment="Right" />
            </Border>
            <Label x:Name="labelManualGame"
                   Foreground="White"
                   VerticalContentAlignment="Center"
                   Content="{x:Static local:Localizable.ManualGame}"
                   HorizontalAlignment="Left"
                   Margin="137,63,0,0"
                   VerticalAlignment="Top"
                   Height="24"
                   Width="134" />
            <Button Style="{StaticResource buttonHover}"
                    x:Name="buttonManualGame"
                    Content=""
                    HorizontalAlignment="Left"
                    Height="24"
                    Margin="131,63,0,0"
                    VerticalAlignment="Top"
                    Width="174"
                    Click="buttonManual_Click" />
        </Grid>

