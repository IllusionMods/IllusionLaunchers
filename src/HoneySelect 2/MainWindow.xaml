                IsCancel="True" />

        <!-- Bottom Links (Discord, Patreon, Update, Manager) -->
        <Grid x:Name="gridUpdate"
              HorizontalAlignment="Left"
              Height="36.333"
              Margin="-40.584,78.286,0,0"
              VerticalAlignment="Top"
