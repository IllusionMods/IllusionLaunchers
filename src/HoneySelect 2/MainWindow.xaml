            <Button Style="{StaticResource buttonHover}"
                    x:Name="buttonFemaleCard"
                    FontSize="10"
                    Content="{x:Static local:Localizable.FolderFemaleCard}"
                    HorizontalAlignment="Left"
                    Height="24"
                    Width="129.516"
                    Margin="28.625,299.71,0,0"
                    VerticalAlignment="Top"
                    Click="buttonFemaleCard_Click" />
            <Button Style="{StaticResource buttonHover}"
                    x:Name="buttonMaleCard"
                    FontSize="10"
                    Content="{x:Static local:Localizable.FolderMaleCard}"
                    HorizontalAlignment="Left"
                    Height="24"
                    Width="129.517"
                    Margin="164.358,299.71,0,0"
                    VerticalAlignment="Top"
                    Click="buttonMaleCard_Click" />
        </Grid>

        <!-- Logo in the center -->
        <Image x:Name="imageLogo"
               HorizontalAlignment="Center"
               Height="127"
               VerticalAlignment="Top"
               Width="266.5"
