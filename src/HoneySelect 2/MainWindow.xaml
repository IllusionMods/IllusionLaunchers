                   Content="{x:Static local:Localizable.StartVR}"
                   HorizontalAlignment="Left"
                   Margin="579,24,0,0"
                   VerticalAlignment="Top"
                   Width="190"
                   Height="34" />
            <Button Style="{StaticResource buttonHover}"
                    x:Name="buttonStartVR"
                    Content=""
                    HorizontalAlignment="Left"
                    Height="36"
                    Margin="578,23,0,0"
                    VerticalAlignment="Top"
                    Width="223"
                    Click="buttonStartV_Click">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform AngleX="-40" />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Button.RenderTransform>
