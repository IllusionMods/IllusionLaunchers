               Margin="313.5,102,318,0" />

        <!-- Close Button -->
        <Button Style="{StaticResource buttonHover}"
                x:Name="buttonClose"
                Content="X"
                HorizontalAlignment="Left"
                Margin="856,10,0,0"
                VerticalAlignment="Top"
                Width="32"
