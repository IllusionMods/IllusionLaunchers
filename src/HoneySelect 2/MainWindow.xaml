               Height="24"
               Margin="10,319,0,0"
               VerticalAlignment="Top"
               Width="22"
               Source="Images/Flags/brazil.png"
               MouseLeftButtonDown="LangBrazil"
               ToolTip="Alterar idioma para Brasileiro" />
        <Image x:Name="flagFR"
               HorizontalAlignment="Left"
               Height="24"
               Margin="10,348,0,0"
               VerticalAlignment="Top"
               Width="22"
               Source="Images/Flags/france.png"
               MouseLeftButtonDown="LangFrench"
               ToolTip="Changer la langue en Français" />
        <Image x:Name="flagGE"
               HorizontalAlignment="Left"
               Height="24"
               Margin="10,377,0,0"
               VerticalAlignment="Top"
               Width="22"
               Source="Images/Flags/germany.png"
               MouseLeftButtonDown="LangGerman"
               ToolTip="Ändern Sie die Sprache in Deutsch"
               Grid.RowSpan="2" />
        <Image x:Name="flagNO"
               HorizontalAlignment="Left"
               Height="24"
               Margin="10,10,0,0"
               VerticalAlignment="Top"
               Width="22"
               Source="Images/Flags/norway.png"
               MouseLeftButtonDown="LangNorwegian"
               ToolTip="Endre språk til Norsk"
               Grid.Row="1" />
        <Image x:Name="flagRU"
               HorizontalAlignment="Left"
               Height="24"
               Margin="10,39,0,0"
               VerticalAlignment="Top"
               Width="22"
               Source="Images/Flags/russia.png"
               MouseLeftButtonDown="LangRussian"
               ToolTip="Сменить язык на русский"
               Grid.Row="1" />

        <!-- Toggle Box Section -->
        <Grid x:Name="ToggleBox"
              HorizontalAlignment="Left"
              Height="491"
              Margin="0,107,0,0"
              VerticalAlignment="Top"
              Width="322"
              Grid.Row="0"
              Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="282*" />
                <RowDefinition Height="209*" />
            </Grid.RowDefinitions>

            <Border BorderBrush="#FFF0C658"
                    Background="#CC000000"
                    BorderThickness="2"
                    HorizontalAlignment="Left"
                    Height="230.333"
                    Margin="52,135,0,0"
                    VerticalAlignment="Top"
                    Width="247"
                    CornerRadius="3"
                    Grid.RowSpan="2">
                <StackPanel Margin="5" x:Name="Toggleables" Orientation="Vertical">
                    <CheckBox x:Name="toggleFullscreen"
                              Content="{x:Static local:Localizable.ToggleFullscreen}"
                              Foreground="White"
                              Checked="FullscreenChecked"
                              Unchecked="FullscreenUnChecked" />
                    <CheckBox x:Name="toggleSFW"
                              Content="{x:Static local:Localizable.ToggleNSFW}"
                              Foreground="White" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Resolution / Quality Combo Boxes -->
        <Border BorderBrush="#FFF0C658"
                Background="#CC000000"
                BorderThickness="2"
                HorizontalAlignment="Left"
                Height="101"
                Margin="54,136,0,0"
                VerticalAlignment="Top"
                Width="245"
                CornerRadius="3">
            <Grid x:Name="CustomRes" Margin="0,88,0,8"/>
        </Border>
        <ComboBox x:Name="dropQual"
                  HorizontalAlignment="Left"
                  Margin="67,149,0,0"
                  VerticalAlignment="Top"
                  Width="219"
                  SelectionChanged="QualityChanged">
            <ComboBoxItem Content="{x:Static local:Localizable.QualityPerformance}"/>
            <ComboBoxItem Content="{x:Static local:Localizable.QualityNormal}"/>
            <ComboBoxItem Content="{x:Static local:Localizable.QualityQuality}"/>
        </ComboBox>
        <ComboBox x:Name="dropDisplay"
                  HorizontalAlignment="Left"
                  Margin="67,176,0,0"
                  VerticalAlignment="Top"
                  Width="219"
                  SelectionChanged="DisplayChanged" />
        <ComboBox x:Name="dropRes"
                  HorizontalAlignment="Left"
                  Margin="67,203,0,0"
                  VerticalAlignment="Top"
                  Width="219"
                  SelectionChanged="ResolutionChanged" />

        <!-- Right-Side Section for disclaimers, folder shortcuts, etc. -->
        <Grid HorizontalAlignment="Left"
              Height="491"
              Margin="576,107,0,0"
              VerticalAlignment="Top"
              Width="322"
              Grid.Row="0"
              Grid.RowSpan="2">

            <!-- Disclaimer Text -->
            <Grid HorizontalAlignment="Left" Height="329" Margin="10,19,0,0" VerticalAlignment="Top" Width="302">
                <Border BorderBrush="#FFF0C658"
                        Background="#CC000000"
                        BorderThickness="2"
                        HorizontalAlignment="Left"
                        Height="197"
                        Margin="10,10,0,0"
                        VerticalAlignment="Top"
                        Width="282"
                        CornerRadius="3">
                    <TextBlock x:Name="warningText"
                               Foreground="White"
                               TextWrapping="Wrap"
                               Margin="8">
                        <Run Text="{x:Static local:Localizable.Disclaimer}" />
                    </TextBlock>
                </Border>
            </Grid>

            <!-- Distribution & Translation Labels -->
            <Grid Margin="-431,446,19,10">
                <Border BorderBrush="White"
                        BorderThickness="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        MaxWidth="600"
                        Margin="0,5,5,0"
                        CornerRadius="5"
                        Background="#BF000002">
                    <Label x:Name="labelDist"
                           Content="{x:Static local:Localizable.Distribution}"
                           Foreground="White" />
                </Border>
            </Grid>
            <Grid x:Name="TransCred" Margin="-431,411,19,45">
                <Border x:Name="labelTranslatedBorder"
                        BorderBrush="White"
                        BorderThickness="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        MaxWidth="700"
                        Margin="0,5,5,0"
                        CornerRadius="5"
                        Background="#BF000002">
                    <Label x:Name="labelTranslated"
                           Content="{x:Static local:Localizable.TranslatedByCredit}"
                           Foreground="White" />
                </Border>
            </Grid>

            <!-- Folder Buttons -->
            <Border BorderBrush="#FFF0C658"
                    Background="#CC000000"
                    BorderThickness="2"
                    HorizontalAlignment="Left"
                    Height="104"
                    Margin="21,231,0,0"
                    VerticalAlignment="Top"
                    Width="282"
                    CornerRadius="3">
                <Grid x:Name="FolderGrid" />
            </Border>
            <Button Style="{StaticResource buttonHover}"
                    x:Name="buttonInst"
                    FontSize="10"
                    Content="{x:Static local:Localizable.FolderInstall}"
                    HorizontalAlignment="Left"
                    Height="24"
                    Width="129.516"
                    Margin="28.625,241.71,0,0"
                    VerticalAlignment="Top"
                    Click="buttonInst_Click" />
            <Button Style="{StaticResource buttonHover}"
                    x:Name="buttonHousing"
                    FontSize="10"
                    Content="{x:Static local:Localizable.FolderUserData}"
                    HorizontalAlignment="Left"
                    Height="24"
                    Width="129.517"
                    Margin="164.358,241.71,0,0"
                    VerticalAlignment="Top"
                    Click="buttonUserData_Click" />
            <Button Style="{StaticResource buttonHover}"
                    x:Name="buttonScenes"
                    FontSize="10"
                    Content="{x:Static local:Localizable.FolderScenes}"
                    HorizontalAlignment="Left"
                    Height="24"
                    Width="129.516"
                    Margin="28.625,270.71,0,0"
                    VerticalAlignment="Top"
                    Click="buttonScenes_Click" />
            <Button Style="{StaticResource buttonHover}"
                    x:Name="buttonScreenshot"
                    FontSize="10"
                    Content="{x:Static local:Localizable.FolderScreenshots}"
                    HorizontalAlignment="Left"
                    Height="24"
                    Width="129.517"
                    Margin="164.358,270.71,0,0"
                    VerticalAlignment="Top"
